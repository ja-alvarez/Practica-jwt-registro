<script>
    const enConstruccion = document.getElementById("enConstruccion");
    const textoBase = "Sitio en construccion";

    const en_construccion = () => {
        let contador = 0;
        //let i = 0;
        const intervalo = setInterval(() => {
            if (contador < 3) {
                enConstruccion.textContent = textoBase + '.'.repeat(contador + 1);
