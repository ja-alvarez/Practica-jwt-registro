<header class="py-3">
    <h1 class="text-center">Vista Perfil</h1>
</header>

<main class="container">
    {{#if error}}
    <section>
        <h2 class="text-center">{{error}}</h2>
        <button class="btn btn-dark"><a href="/" style="color:white; text-decoration: none; ">Volver a la vista
                principal</a></button>
    </section>

    {{else}}
    <section class="text-center">
        <h3>Informaci√≥n personal</h3>
        <p>Id: {{usuario.id}}</p>
        <p>Nombre: <strong>{{usuario.nombre}}</strong></p>
        <p>Email: {{usuario.email}}</p>
        <p>Admin: {{usuario.admin}}</p>
        {{#if usuario.imagen}}
        <img src="{{usuario.imagen}}" alt="{{usuario.imagen}}">
        {{else}}
        <img src="../avatars/sin_foto.jpeg" alt="Sin foto" width="300px">
        {{/if}}
    </section>
    {{/if}}
</main>